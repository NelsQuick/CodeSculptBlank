{% extends 'base.html.twig' %}

{% block title %}Accueil / CodeSculpt{% endblock %}

{% block body %}
<div class="home-container">
    <div class="section-left">
        <div class="poste-form" style="position: relative; /* Position relative pour contenir le bouton */">
            <p class="username-post">@{{ app.user.username }}</p>
            {{ form_start(form) }}
            {{ form_widget(form.content, {'attr': {'class': 'content-input'}}) }}
            <div class="button-container">
                <button class="submit-post" type="submit">Poster</button>
            </div>
            {{ form_end(form) }}
        </div>

    {% for post in posts %}
        <div class="recent-posts">
            <p class="username-post">@{{ post.user.username }} Â· {{ post.date|date('d/m/Y H:i') }} </p>
            {{ post.content }}
        </div>
    {% endfor %}



    </div>


    <div class="section-right">
    </div>
</div>
{% endblock %}
